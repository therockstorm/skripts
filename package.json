{
  "name": "skripts",
  "version": "0.8.0",
  "description": "CLI for project scripts and configuration.",
  "homepage": "https://github.com/therockstorm/skripts#readme",
  "bugs": {
    "url": "https://github.com/therockstorm/skripts/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Rocky Warren",
    "url": "https://www.rockywarren.com"
  },
  "files": [
    "dist",
    "base-tsconfig.json",
    "config.js",
    ".eslintrc.js"
  ],
  "keywords": [
    "cli",
    "configuration",
    "kcd-scripts",
    "react-scripts",
    "scripts",
    "skripts",
    "toolbox",
    "typescript"
  ],
  "main": "dist/index.js",
  "bin": {
    "skripts": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/therockstorm/skripts.git"
  },
  "scripts": {
    "build": "tsc && cp -r src/config dist",
    "clean": "rm -rf dist",
    "format": "npm run skripts -- format",
    "lint": "npm run skripts -- lint",
    "pub": "npm run clean && npm run build && npm publish",
    "skripts": "npm run build && node dist",
    "test": "npm run skripts -- test",
    "help": "npm run build && node dist",
    "watch": "npm run test -- --watch"
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.59",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@types/read-pkg-up": "^6.0.0",
    "@types/which": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "acorn": "^7.4.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "read-pkg-up": "^7.0.1",
    "serverless": "^2.5.0",
    "serverless-iam-roles-per-function": "^2.0.2",
    "serverless-pseudo-parameters": "^2.5.0",
    "serverless-webpack": "^5.3.3",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.1.4",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "typescript-eslint": "0.0.1-alpha.0",
    "webpack": "^4.44.1",
    "webpack-node-externals": "^2.5.0",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "husky": "^4.2.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run skripts -- pre-commit"
    }
  }
}
